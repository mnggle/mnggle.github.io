// Custom styles.
// Header
// --------------------------------------------------
@import 'https://fonts.googleapis.com/css?family=Montserrat:200,300,400,600'
.header { background: $s-head-bg; }
.header-inner {
  //padding: 100px 0 100px;
  background-size:100%;
  padding-top:10px;
  height:300px;
  clearfix();

  +mobile() {
    width: auto;
    margin-bottom: 50px;
    padding: 10px;
  }
}
.header-inner canvas{
    +mobile() {
      display:none;
  }
}
.site-meta {
  //float: left;
  //margin-left: -20px;
  text-align:center;
  line-height: 80px;

  +mobile() {
    margin-left: 10px;
  }

  .brand {
    padding: 2px 1px;
    background: none;

    +mobile() { display: block; }
  }

  .logo { display: none; }

  .site-title {
    font-size: 40px;
    font-weight: bolder;
    color:#fff;
    font-family:'Open Sans', sans-serif;
    +mobile() { line-height: 34px; }
  }
}




.use-motion {
  .logo-line-before i { left: -100%; }
  .logo-line-after i { right: -100%; }
}
// Menu
// --------------------------------------------------
.site-nav-toggle {
  position: static;
  float: right;
}
.menu {
  //float: right;
  margin: 8px 0 0 0;

  +mobile() {
    margin: 20px 0 0 0;
    padding: 0;
  }

  br { display: none; }

  .menu-item {
  	margin:0;
    +mobile() { display: block; }
  }

  .menu-item a {
    padding: 0 15px;
    background: none;
    border: none;
    //border-radius: 2px;
    color:#cdcdcd;
    transition-property: background;
    font-size:14px;

    transition:all .5s;
    -moz-transition:all .5s; /* Firefox 4 */
    -webkit-transition:all .5s; /* Safari and Chrome */
    -o-transition:all .5s; /* Opera */

    +mobile() {
      text-align: left;
    }

    &:hover {color:#FF5E4C }
  }

  a::before {
      display: none;

      +mobile() { display: block; }
    }

  +mobile() { float: none; }
}

.menu .menu-item {
  display: inline-block;
  list-style: none;
  }
