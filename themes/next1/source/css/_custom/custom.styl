// Custom styles.

// Header
// --------------------------------------------------
.header { position:relative; overflow:hidden; height:100%;background:none;}
.header:before{
      background:#1B2030 $s-head-bg; 
			background-size: cover;
      background-attachment:fixed;
			-webkit-backface-visibility: hidden;
			-webkit-transform: translateZ(0) scale(1.0, 1.0);
			transform: translateZ(0);
			content: "";
			width: 100%;
			height: 100%;
			position: absolute;
			animation: grow 60s linear 10ms infinite;
			transition: all 0.2s ease-in-out;
			top: 0;
			left: 0;
			z-index: -2
}
  @keyframes grow {
    0% {
      transform: scale(1)
    }
    50% {
      transform: scale(1.2)
    }
  }
.header:after {
  content: "";
  width: 100%;
  height: 40%;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: -1;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, rgba(27, 32, 48, 1) 100%);
}
.header-inner {
  height: auto;
  clearfix();
}
// Menu
// --------------------------------------------------
.site-nav-toggle {
  z-index: 10;
}
.menu {
  z-index: 100000;
  .menu-item {
  	margin:0 10px;
  }
  .menu-item a {
    color: #eee;
    padding: 0 20px;
    background: none;
    border: none;
    transition:all 1s;
    -moz-transition:all 1s; /* Firefox 4 */
    -webkit-transition:all 1s; /* Safari and Chrome */
    -o-transition:all 1s; /* Opera */
    &:hover {background:#fff;color:#000;}
  }
}
